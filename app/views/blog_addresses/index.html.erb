<h2>Listing Blog Addresses</h2>

<table>
  <tr>
    <th>Blog Address</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blog_addresses.each do |blog_address| %>
  <tr>
    <td><a href = <%= blog_address.blogadd %>><%= blog_address.blogadd.first(40) %></a></td>
    <td><%= current_user.name %></td>
    <td><%= link_to 'Show', blog_address %></td>
    <td><%= link_to 'Edit', edit_blog_address_path(blog_address) %></td>
    <td><%= link_to 'Destroy', blog_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

