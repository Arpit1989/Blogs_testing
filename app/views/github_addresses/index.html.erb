<h1>Listing Github Addresses</h1>

<table class="table table-striped">
  <tr>
    <th>  Github Addresses  </th>
    <th>   User </th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @github_addresses.each do |github_address| %>
  <tr>
    <td><a href = <%= github_address.githubadd %>><%= github_address.githubadd.first(30) %> </a></td>
    <td><%= current_user.name %></td>
    <td><%= link_to 'Show', github_address %></td>
    <td><%= link_to 'Edit', edit_github_address_path(github_address) %></td>
    <td><%= link_to 'Destroy', github_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

