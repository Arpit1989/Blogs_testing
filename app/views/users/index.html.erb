
<h3 class ="text-info">Users</h3>
<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th class="text-error">Username</th>
          <th class="text-error">Email</th>
          <th class="text-error">Registered</th>
          <th class="text-error">Role</th>
          <th class="text-error"></th>
          <th class="text-error"></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @users.each do |user| %>
    <tr>
        <td class ="text-info"><%= link_to user.name, users_index_path %></td>
        <td class ="text-info"><%= user.email %></td>
        <td class ="text-info"><%= user.created_at.to_date %></td>
        <td class ="text-info"><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
        <td class ="text-info">
          <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
          <%= render user %>
        </td>
        <td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>                                       
    </tr>
  <% end %>
  </tbody>
</table>
</div>
